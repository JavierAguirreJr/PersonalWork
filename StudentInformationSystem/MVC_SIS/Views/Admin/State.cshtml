    @model List<Exercises.Models.Data.State>

@{
    ViewBag.Title = "State";
}

<div class="row">
    <div class="col-xs-12">
        <h2>State</h2>
        @Html.ActionLink("Add State", "AddState", "Admin", null, new { @class = "btn btn-primary" })
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped" style="width: auto;">
            <thead>
                <tr>
                    <th>States</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var state in Model)
                 {
                    <tr>
                        <td>@state.StateName | @state.StateAbbreviation</td>
                        <td>@Html.ActionLink("Edit", "EditState", "Admin", new { id = state.StateAbbreviation }, null)</td>
                        <td>@Html.ActionLink("Delete", "DeleteState", "Admin", new { id = state.StateAbbreviation }, null)</td>
                    </tr>
                 }
            </tbody>
        </table>
    </div>
</div>

