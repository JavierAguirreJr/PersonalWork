@model Dealership.Models.Specials
@{
    ViewBag.Title = "AddSpecial";
}

<h2>Add Special</h2>
<hr/>
@using (Html.BeginForm())
{
    @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
    <div class="col-md-12">
        <div class="row">
            <label>Title</label>
            @Html.TextBoxFor(s => s.SpecialName, new { @class = "form-control" })
            <br/>
            <label>Description</label>
            @Html.TextAreaFor(s => s.Details, new { @class = "form-control", rows = "6"})
            <br/>
        </div>
        <div class="row">
            <button class="btn btn-primary">Save</button>
            @Html.ActionLink("Cancel", "Specials", "Admin", null, new {@class = "btn btn-danger" })
        </div>
    </div>
}

