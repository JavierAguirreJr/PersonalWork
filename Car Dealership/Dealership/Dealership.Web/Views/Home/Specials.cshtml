@model List<Dealership.Models.Specials>
@{
    ViewBag.Title = "Specials";
}

<h2>Specials</h2>

<div class="container">
    @using (Html.BeginForm("Specials", "Home", FormMethod.Post))
    {
        <div class="col-md-12">
            <div class="panel-group panel-primary">
                <div class="panel-body">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <br />
                         @Html.HiddenFor(m => m[i].SpecialsId)
                        <div class="col-sm-1">
                            <div class="row">
                                <img src="~/Images/money.jpg" height="110" ; width="200" />
                            </div>
                        </div>
                        <div class="col-md-offset-3">
                            <div class="row">
                                <br />
                                <strong>@Model[i].SpecialName</strong>
                                <br />
                                @Model[i].Details
                                <br />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

